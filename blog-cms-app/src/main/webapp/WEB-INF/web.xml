<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Blog CMS Sample Application</display-name>
    <description>Sample blog/CMS application for WAF training</description>

    <!-- Blog Post Servlet -->
    <servlet>
        <servlet-name>BlogServlet</servlet-name>
        <servlet-class>com.blog.servlet.BlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlogServlet</servlet-name>
        <url-pattern>/blog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlogServlet</servlet-name>
        <url-pattern>/blog/*</url-pattern>
    </servlet-mapping>

    <!-- Comment Servlet -->
    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>com.blog.servlet.CommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/comments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/comments/*</url-pattern>
    </servlet-mapping>

    <!-- File Upload Servlet -->
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>com.blog.servlet.FileUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <!-- Search Servlet -->
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.blog.servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <!-- User Management Servlet -->
    <servlet>
        <servlet-name>UserManagementServlet</servlet-name>
        <servlet-class>com.blog.servlet.UserManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserManagementServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserManagementServlet</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>

    <!-- Content Management Servlet -->
    <servlet>
        <servlet-name>ContentServlet</servlet-name>
        <servlet-class>com.blog.servlet.ContentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContentServlet</servlet-name>
        <url-pattern>/content</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContentServlet</servlet-name>
        <url-pattern>/content/*</url-pattern>
    </servlet-mapping>

    <!-- File Upload Configuration -->
    <multipart-config>
        <max-file-size>10485760</max-file-size>
        <max-request-size>20971520</max-request-size>
        <file-size-threshold>2097152</file-size-threshold>
    </multipart-config>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>45</session-timeout>
    </session-config>

    <!-- Welcome Files -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>

</web-app>
